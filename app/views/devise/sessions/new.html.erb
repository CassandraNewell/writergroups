<div class="hero-full-screen grid-x grid-padding-x">
  <div class="middle-content-section cell small-6 small-offset-3 grid-y grid-padding-y">

    <div class="cell">
      <h2>Log in</h2>
    </div>

    <div class="cell">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="">
        <% if devise_mapping.rememberable? -%>
          <div class="">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      </div>

      <div class="field grid-x grid-padding-x">
        <div class="cell small-3">
          <%= f.label :email %>
        </div>
        <div class="cell small-9">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="field grid-x grid-padding-x">
        <div class="cell small-3">
          <%= f.label :password %>
        </div>
        <div class="cell small-9">
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>

        <div class="actions cell small-8">
          <%= f.submit "Log in", :class => 'button large' %>
        </div>

      <% end %>
    </div>

    <div class="cell grid-x">
      <div class="cell small-4 small-offset-1">
        <a class="button small expanded secondary" href="/users/sign_up"> Sign up</a>
      </div>
      <div class="cell small-4 small-offset-2">
        <a class="button small expanded secondary" href="/users/password/new"> Forgot password?</a>
      </div>
    </div>

  </div>
</div>
